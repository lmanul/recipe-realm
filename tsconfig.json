{
    "compilerOptions": {
        "module": "nodenext",
        "target": "es2020",
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ],
}
